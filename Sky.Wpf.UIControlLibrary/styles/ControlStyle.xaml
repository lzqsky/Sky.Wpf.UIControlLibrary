<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:com="clr-namespace:Sky.Wpf.UIControlLibrary.common">
    <!--基样式-->
    <Style x:Key="base.style" BasedOn="{x:Null}" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{DynamicResource font.default}"></Setter>
        <Setter Property="FontSize" Value="{DynamicResource size.font.default}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource brush.text.foreground}"></Setter>
        <Setter Property="Height" Value="{DynamicResource size.height.default}"/>
        <Setter Property="Padding" Value="{DynamicResource size.padding.default}"/>
        <Setter Property="Background" Value="{DynamicResource brush.text.background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource brush.text.borderbrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource brush.text.foreground}"/> 
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="com:AttachProperty.CornerRadius" Value="{DynamicResource size.corner.default}" />
    </Style> 
</ResourceDictionary>